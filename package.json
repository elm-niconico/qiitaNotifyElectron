{
  "name": "qiita-notify",
  "version": "1.0.0",
  "main": "build/main.js",
  "author": "elm-niconico",
  "description": "キータの通知アプリです",
  "scripts": {
    "start": "electron .",
    "build:dev": "yarn clean && webpack --config webpack.dev.js",
    "build:prod": "yarn clean && webpack --config webpack.prod.js",
    "server": "webpack serve --hot --config webpack.dev.js",
    "watch": "webpack watch --config webpack.dev.js",
    "package-app": "electron-builder --win --x64",
    "getType": "typesync",
    "test": "jest",
    "clean": "rimraf build"
  },
  "license": "MIT",
  "dependencies": {
    "@types/electron-is-dev": "^1.1.1",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "axios": "^0.21.1",
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "recoil": "^0.1.3",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/webpack-dev-server": "^3.11.2",
    "css-loader": "^5.1.3",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "electron-hot-reload": "^0.1.4",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.18",
    "typesync": "^0.8.0",
    "webpack": "^5.26.2",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "build": {
    "appId": "desktop-center-notify-qiita",
    "files": [
      "package.json",
      "package-lock,json",
      "build/main.js",
      "build/index.js",
      "build/index.html"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
